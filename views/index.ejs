<body class="h-screen w-screen bg-blue-50">

  <!-- Header -->
  <div class="header">
      <div class="hero-banner">
          <h1 class="text-4xl font-bold">Penny</h1>
      </div>
      <button class="dropdown-btn" onclick="toggleDropdown()">
          <i class="fas fa-plus"></i>
      </button>
      <div class="dropdown-content" id="dropdown-content">
          <button onclick="redirectToGithub()"><i class="fab fa-github"></i></button>
          <button onclick="redirectToPatreon()"><i class="fab fa-patreon"></i></button>
          <button onclick="redirectToWTF()"><i class="fas fa-question"></i></button>
      </div>
  </div>

    <!-- Main Content -->
    <div class="container mx-auto my-8">

        <!-- Card -->
        <div class="card">

            <form action="/create" method="post" class="mt-8">
                <!-- Text Area -->
                <textarea name="letter" placeholder="Write your letter here..."></textarea>

                <!-- Background Picker -->
                <div class="bg-picker">
                    <label for="bg-color">Enter the author name:</label>
                    <input type="text" id="author" name="author" placeholder="Jatin">
                </div>

                <!-- Publish Button -->
                <button type="submit" class="publish-btn">Publish Letter</button>
            </form>
        </div>

        <!-- Note -->
        <div class="note">
            <p>We support Markdown. Learn how it works <a href="https://www.markdownguide.org/cheat-sheet/" target="_blank">here</a>.</p>
        </div>
    </div>

    <!-- Copyright -->
    <div class="copyright">
        <p>&copy; Penny. All rights reserved.</p>
    </div>

    <!-- JavaScript for Dropdown Functionality -->
    <script>
      function toggleDropdown() {
          const dropdownContent = document.getElementById("dropdown-content");
          const dropdownBtn = document.querySelector(".dropdown-btn");
          if (dropdownContent.style.display === "block") {
              dropdownContent.style.display = "none";
              dropdownBtn.classList.remove("open");
          } else {
              dropdownContent.style.display = "block";
              dropdownBtn.classList.add("open");
          }
      }

      function redirectToGithub() {
        window.open("https://github.com/oyejateen", "_blank");
      }

      function redirectToPatreon() {
        window.open("https://www.patreon.com/oyejateen", "_blank");
      }


        function redirectToWTF() {
            window.location.href = "/wtf";
        }
    </script>
